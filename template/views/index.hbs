  <body>
     {{>header}}
    <div class="container-fluid ">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto"></div>
        <div class="col-md-6 col-12 main_header_left">
            <p>Welcome to the Dark Sky Weather App</p>
            <h1>Find your Hometown Weather</h1>
            <a href="/weather"><button class="btn">Check Now</button></a>
      </div>
      <div class="col-md-6 col-12 main_header_right">
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="images/sunny.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="images/Cloudy.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="images/rain.jpg" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
    </div>
